# convert weight on Eaarth to the your weight on another planet

print("I have information for the following planets:\n")

print("   1. Venus   2. Mars    3. Jupiter")
print("   4. Saturn  5. Uranus  6. Neptune\n")
 
weight = 185
planet = 3

# Write an if statement below:
if planet == 1:
  print('Weight on Venus: ', weight*0.91)
elif planet == 2:
  print('Weight on Mars: ', weight*0.38)
elif planet == 3:
  print('Weight on Jupiter: ', weight*2.34)
elif planet == 4:
  print('Weight on Saturn: ', weight*1.06)
elif planet == 5:
  print('Weight on Uranus: ', weight*0.92)
elif planet == 6:
  print('Weight on Neptune: ', weight*1.19)
